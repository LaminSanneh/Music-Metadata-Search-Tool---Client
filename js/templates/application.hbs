<div {{bind-attr class="sidebarPermanent:sidebar-permanent"}}>
    {{partial "partials/search-overlay"}}
    <div class="container-fluid">
        <nav class="navbar navbar navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home"></span> Crypto Learning</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Learn</a></li>
                        <li><a href="/browse">Browse</a></li>
                        <li><a {{action "toggleSearchOverlay"}} href="" class=""><span class="glyphicon glyphicon-search"></span> Search</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/logout">Log Out</a></li>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    </ul>

                </div><!-- /.navbar-collapse -->
            </div>
        </nav>
    </div>
	<header class="main-header">
		{{#link-to "index"}}Home{{/link-to}}
	</header>
	<div {{bind-attr class=":sidebar sidebarOpen:sidebar--open"}}>
		<nav class="menu">

		</nav>
		{{#if sidebarOpen}}
			{{#unless sidebarPermanent}}
				<button {{action "toggleSidebar"}} class="sidebar__sidebar-toggler">Close Menu</button>
			{{/unless}}
		{{else}}
			<button {{action "toggleSidebar"}} class="sidebar__sidebar-toggler">Open Menu</button>
		{{/if}}

		<div class="main-content__menu-permanent-container">
			<label>Make menu permanently Open</label>
			{{input checked=sidebarPermanent type="checkbox"}}
		</div>
	</div>
	{{outlet}}
</div>
